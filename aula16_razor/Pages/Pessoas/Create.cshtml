@page
@model aula16_Razor.Pages.Pessoas.CreateModel
@{
    ViewData["Title"] = "Cadastrar Pessoa";
}

<h2>Cadastro de Pessoa</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Pessoa.Nome">Nome</label>
        <input asp-for="Pessoa.Nome" class="form-control" />
        <span asp-validation-for="Pessoa.Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Pessoa.Idade">Idade</label>
        <input asp-for="Pessoa.Idade" class="form-control" />
        <span asp-validation-for="Pessoa.Idade" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Pessoa.Email">Email</label>
        <input asp-for="Pessoa.Email" class="form-control" />
        <span asp-validation-for="Pessoa.Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
